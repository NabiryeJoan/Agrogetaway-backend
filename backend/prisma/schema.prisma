// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  contact  Int
  bookings Booking[]
  comments Comment[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  date       DateTime
  created_at Int

  farmId Int
  farm   Farm @relation(fields: [farmId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Farm {
  id           Int       @id @default(autoincrement())
  farm_name    String
  location     String
  type_of_crop String
  bookings     Booking[]
  comments     Comment[]

  farmerId Int
  farmer   Farmer @relation(fields: [farmerId], references: [id])
}

model Farmer {
  id      Int    @id @default(autoincrement())
  contact Int
  name    String
  farms   Farm[]
}

model Comment {
  id   Int      @id @default(autoincrement())
  text String
  date DateTime

  userId Int
  user   User @relation(fields: [userId], references: [id])

  farmId Int
  farm   Farm @relation(fields: [farmId], references: [id])
}
